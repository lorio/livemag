%table.table.table-hover
	%thead
		%tr
			%th Quantity
			%th Product
			%th Price
	%tbody
		-@cart.items.each do |item| 
			%tr
				%td
					=item.quantity
				%td
					=image_tag item.product.image.thumb
					=link_to item.product.name, item.product
					
				
				/%td.text-right=number_to_currency item.total_price

/%p=@cart.total_price